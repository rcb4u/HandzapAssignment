<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextLimitStyle" parent="TextAppearance.AppCompat.Medium">
    <item name="android:textColor">@color/colorAccent</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">18sp</item>
    </style>

    <style name="TextLimitError" parent="TextAppearance.AppCompat.Medium">
    <item name="android:textColor">@color/colorRed</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="AppTheme.TextInputStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundMode">none</item>
        <item name="hintTextAppearance">@style/AppTheme.TextInputStyle.Hint</item>
        <item name="counterTextAppearance">@style/AppTheme.TextInputStyle.Counter</item>
    </style>
    <style name="AppTheme.TextInputStyle.Hint" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/textColorHint</item>
    </style>
    <style name="AppTheme.TextInputStyle.Counter" parent="TextAppearance.Design.Counter">
        <item name="android:textColor">@color/textColorHint</item>
    </style>
    <style name="AppTheme.Dialog" parent="Base.ThemeOverlay.MaterialComponents.Dialog">
    </style>

</resources>
